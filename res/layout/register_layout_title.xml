<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/main_color" >

    <RelativeLayout
        android:id="@+id/register_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cinema_film_title_back_bg"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/register_title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/register_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/register_title_back_img"
            android:text="@string/register_tv"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/get_code_again"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_boder_white"
            android:padding="5dp"
            android:text="重获验证码"
            android:textColor="@android:color/white"
            android:textSize="14sp" 
            android:visibility="gone"/>
        	
    </RelativeLayout>

</LinearLayout>